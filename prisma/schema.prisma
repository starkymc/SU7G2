generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Songs{
  id Int @id @default(autoincrement() )
  name String
  artist String
  album String
  year Int
  genre String
  duration Int
  privacy Boolean @default(false)
  playlists Playlist[]
  
}

model Playlist{
  id Int @id @default(autoincrement() )
  name String
  song Songs @relation(fields: [songId], references: [id])
  songId Int
}