// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  password String
  last_session DateTime @default(now())
  created_at DateTime @default(now())
  date_born String?
  playlists Playlist[]
}

model Songs{
  id Int @id @default(autoincrement() )
  name String
  artist String
  album String
  year Int
  genre String
  duration Int
  privacy Boolean @default(false)
  playlists Playlist[]
}

model Playlist{
  id Int @id @default(autoincrement() )
  name String @unique
  usuario Usuario @relation(fields: [userId], references: [id])
  userId Int 
  song Songs @relation(fields: [songId], references: [id])
  songId Int
  
}

